<%= flash[:notice] if flash[:notice] %>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %> <br/>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.text_field :birth_date %>
  <%= @format_source.friendly_date_format %>
  <br/>
  <%= f.text_field :created_at %>
  <%= @format_source.friendly_time_format %>
  <br/>
  <%= f.submit %>
<% end %>
