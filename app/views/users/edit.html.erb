<%= flash[:notice] if flash[:notice] %>

<% if @interaction.errors.any? %>
  <% @interaction.errors.full_messages.each do |message| %>
    <%= message %> <br/>
  <% end %>
<% end %>

<%= form_for @interaction, as: :user, url: user_path(@interaction, id: @interaction.user.id), method: :put do |f| %>
  <%= f.text_field :name %>
  <%#= @datetime_format_source.friendly_date_format %>
  <br/>
  <%= f.text_field :birth_date %>
  <%#= @datetime_format_source.friendly_time_format %>
  <br/>
  <%= f.submit %>
<% end %>
